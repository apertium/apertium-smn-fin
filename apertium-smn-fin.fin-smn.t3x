              </equal>
            </test>
            <let>
              <clip pos="1" part="a_person"/>
              <lit-tag v="sg3"/>
            </let>
          </when>
        </choose>
        <out>
          <lu>
            <clip pos="1" part="whole"/>
          </lu>
          <b pos="1"/>
          <lu>
            <clip pos="2" part="whole"/>
          </lu>
        </out>
      </action>
    </rule>

    <rule comment="CHUNK: modal verb Pekan tÃ¤ytyy">
